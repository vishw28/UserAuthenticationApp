<!DOCTYPE html>
<html>
<head>
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/angular-toastr.css">
  <link rel="stylesheet" href="/styles/foundation.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/style.css">
  <!--STYLES END-->
</head>
<body ng-app="LoginModule" ng-controller="LoginController as lc">
<div class="large-4 large-centered columns">
  <div class="login-box">
    <div class="row">
      <div class="large-12 columns">
        <h2 class="text-center">
          UserAuth
        </h2>
        <p>Please log in or create an account</p>
        <form ng-submit="lc.runLogin()">
          <div class="row">
            <div class="large-12 columns">
              <input ng-model="lc.email" type="email" name="email" placeholder="Email Address" required />
            </div>
          </div>
          <div class="row">
            <div class="large-12 columns">
              <input ng-model="lc.password" type="password" name="password" placeholder="Password" required />
            </div>
          </div>
          <div class="row">
            <div class="large-5 columns">
              <input type="submit" class="button expand" value="Log In"/>
            </div>
            <div class="large-7 columns">
              <a class="button expand">Create Account</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!--SCRIPTS-->
<script src="/js/dependencies/sails.io.js"></script>
<script src="/js/dependencies/angular.js"></script>
<script src="/js/dependencies/angular-toastr.js"></script>
<script src="/js/dependencies/angular-toastr.tpls.js"></script>
<script src="/js/dependencies/foundation.min.js"></script>
<script src="/js/dependencies/jquery.js"></script>
<script src="/js/public/signup/signupModule.js"></script>
<script src="/js/public/signup/signupController.js"></script>
<script src="/js/public/login/loginModule.js"></script>
<script src="/js/public/login/loginController.js"></script>
<script src="/js/private/dashboard/dashModule.js"></script>
<script src="/js/private/dashboard/dashController.js"></script>
<!--SCRIPTS END-->
</body>
</html>
